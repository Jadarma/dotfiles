#!/bin/sh
# -----------------------------------------------------------------------------
# Screen Capture
#
# Capture the entire screen, and save it in the screenshots folder.
# -----------------------------------------------------------------------------

FILE="$(xdg-user-dir SCREENSHOTS)/screen-$(date +%s).png"

maim \
  --hidecursor \
  --quality 8 \
  --format png \
  "$FILE" \
  && notify-send "Screenshot saved." "$FILE"
