#!/bin/sh

# Kill al previous instances
killall -q polybar
while pgrep -u "$(id -u)" -x polybar > /dev/null; do sleep 1; done

# TODO: Do not hardcode monitor identifiers.
export MONITOR_LEFT='DP-1'
export MONITOR_MAIN='DP-3'
export MONITOR_RIGHT='DP-5'

polybar -c "${XDG_CONFIG_HOME}/polybar/bars/triple-setup.ini" --reload left &
polybar -c "${XDG_CONFIG_HOME}/polybar/bars/triple-setup.ini" --reload main &
polybar -c "${XDG_CONFIG_HOME}/polybar/bars/triple-setup.ini" --reload right &