#!/usr/bin/env zsh
# ---------------------------------------------------------------------------------------------------------------------
# POWER MENU
#
# Show a wofi prompt in for various power options.
# ---------------------------------------------------------------------------------------------------------------------

OPTION=$(\
  printf 'ğŸ”’ Lock\nğŸ’¤ Suspend\nğŸ”Œ Shutdown\nâ™» ï¸Restart\nğŸšª Logout' |
  wofi --dmenu -D orientation=horizontal --lines=1 -i -p "Power Options:"\
)

case "$OPTION" in
  *Lock) exec swaylock -f ;;
  *Shutdown) exec systemctl poweroff;;
  *Restart) exec systemctl reboot;;
  *Suspend) exec systemctl suspend;;
  *Logout) exec swaymsg exit;;
esac
